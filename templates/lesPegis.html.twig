{% extends "base.html.twig" %}

{% block central %}
<!-- page start-->
<div class="col-sm-8">
    <section class="panel">
        <div class="chat-room-head">
            <h3><i class="fa fa-angle-right"></i> Gérer les PEGI</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr class="tableau-entete">
                        <th><i class="fa fa-bullhorn"></i> Identifiant</th>
                        <th><i class="fa fa-bookmark"></i> Age Limite</th>
                        <th><i class="fa fa-bookmark"></i> Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{ include('messages.html.twig') }}
                    <!-- formulaire pour ajouter un nouveau PEGI -->
                    <tr>
                        <form action="{{ path('pegis_ajouter') }}" method="post">
                            <td>Nouveau</td>
                            <td>
                                <input type="number" id="txtAgePegi" name="txtAgePegi" size="5"
                                       required placeholder="Âge" title="Age PEGI" />
                            </td>
                            <td>
                                <input type="text" id="txtLibPegis" name="txtLibPegis" size="24"
                                       required minlength="4" maxlength="24" placeholder="Description" title="Description du PEGI" />
                            </td>
                            <td>
                                <button class="btn btn-primary btn-xs" type="submit" name="cmdAction"
                                        value="ajouterNouveauPegis" title="Enregistrer nouveau PEGI"><i class="fa fa-save"></i></button>
                                <button class="btn btn-info btn-xs" type="reset" title="Effacer la saisie"><i class="fa fa-eraser"></i></button>
                            </td>
                        </form>
                    </tr>
                    {% for key, pegi in tbPegis %}
                        <tr>
                            <!-- formulaire pour demander la modification et supprimer les PEGI -->
                            <form method="post">
                                <td>{{ pegi.identifiant }}<input type="hidden" name="txtIdPegis" value="{{ pegi.identifiant }}" /></td>
                                <td>
                                    {% if pegi.identifiant != idPegisModif %}
                                        {{ pegi.age }}
                                </td>
                                <td>
                                    {{ pegi.description }}
                                </td>
                                <td>
                                    {% if notification != 'rien' and pegi.identifiant == idPegisNotif %}
                                        <button class="btn btn-success btn-xs"><i class="fa fa-check"></i> {{ notification }}</button>
                                    {% endif %}
                                    <button class="btn btn-primary btn-xs" type="submit" name="cmdAction"
                                            value="demanderModifierPegis" title="Modifier" formaction="{{ path('pegis_demandermodifier') }}"><i class="fa fa-pencil"></i></button>
                                    <button class="btn btn-danger btn-xs" type="submit" name="cmdAction"
                                            value="supprimerPegis" title="Supprimer" formaction="{{ path('pegis_supprimer') }}"
                                            onclick="return confirm('Voulez-vous vraiment supprimer ce PEGI ?');"><i class="fa fa-trash-o"></i></button>
                                </td>
                                    {% else %}
                                        <input type="number" id="txtAgePegi" name="txtAgePegi" size="5"
                                               required value="{{ pegi.age }}" />
                                </td>
                                <td>
                                    <input type="text" id="txtLibPegis" name="txtLibPegis" size="24"
                                           required minlength="4" maxlength="24" value="{{ pegi.description }}" />
                                </td>
                                <td>
                                    <button class="btn btn-primary btn-xs" type="submit" name="cmdAction"
                                            value="validerModifierPegis" title="Enregistrer" formaction="{{ path('pegis_validermodifier') }}"><i class="fa fa-save"></i></button>
                                    <button class="btn btn-info btn-xs" type="reset" title="Effacer la saisie"><i class="fa fa-eraser"></i></button>
                                    <button class="btn btn-warning btn-xs" type="submit" name="cmdAction"
                                            value="annulerModifierPegis" title="Annuler" formaction="{{ path('pegis_afficher') }}"><i class="fa fa-undo"></i></button>
                                </td>
                                    {% endif %}
                            </form>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div><!-- fin div panel-body -->
    </section><!-- fin section PEGI -->
</div><!-- fin div col-sm-8 -->
{% endblock %}
